{% extends 'base.html.twig' %}

{% block title %}LeBonLogement - Accueil{% endblock %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('newuser') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('logout') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="alert alert-success">Vous êtes connecté(e), {{ app.user.prenom }} {{ app.user.nom }} !</div>
    {% endif %}
    <h1>Bienvenue sur LeBonLogement ! Venez chercher votre logement !</h1>
    <div id="homecarousel" style="width: 50%;margin: 0 25%;" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" style="height:15px;" data-bs-target="#homecarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" style="height:15px;" data-bs-target="#homecarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" style="height:15px;" data-bs-target="#homecarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner" id="imgcontainer">
            <div class="carousel-item active">
                <img src="{{ asset('uploads/imagesaccueil/maison1.jpg') }}" class="d-block w-100" alt="1st slide">
            </div>
            <div class="carousel-item" id="imgcontainer">
                <img src="{{ asset('uploads/imagesaccueil/maison2.jpg') }}" class="d-block w-100" alt="2nd slide">
            </div>
            <div class="carousel-item" id="imgcontainer">
                <img src="{{ asset('uploads/imagesaccueil/maison1.jpg') }}" class="d-block w-100" alt="3rd slide">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#homecarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#homecarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
{% endblock %}
