<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}LeBonLogement{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
            <link href="{{ asset('css/lebonlogement.css') }}" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            <script src=" {{ asset('js/lebonlogement.js') }} " defer></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous" defer></script>
        {% endblock %}
        {% block navbar %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="{{ path ('accueil') }} ">Accueil</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path ('bien_index') }} ">Liste des biens</a>
                        </li>
                    {% endif %}
                    </ul>
                </div>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <button type="button" class="btn btn-primary"><a class="liens" href="{{ path ('app_logout') }}">Se d√©connecter</a></button> || <button>Modifier Profil</button>
                {% else %}
                    <button type="button" class="btn btn-primary"><a class="liens" href="{{ path ('app_login') }}">Se connecter</a></button> || <button type="button" class="btn btn-primary"><a class="liens" href="{{ path ('app_register') }}">S'inscrire</a></button>
                {% endif %}
            </nav>
        
        {% endblock %}
    </head>
    <body>
        {% block body %}    
        {% endblock %}
    </body>
</html>
