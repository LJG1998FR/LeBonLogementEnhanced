<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}LeBonLogement{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
            <link href="{{ asset('css/lebonlogement.css') }}" rel="stylesheet">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
            <link href="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.css" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous" defer></script>
            <script src="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js"></script>
        {% endblock %}
        {% block navbar %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="{{ path ('accueil') }} " style="margin-left:15px;">Accueil</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path ('bien_index') }} ">Mes biens</a>
                        </li>
                    {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path ('bien_all_index') }} ">Tous les biens</a>
                        </li>
                    </ul>
                </div>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a class="liens" href="{{ path ('app_logout') }}"><button type="button" class="btn btn-dark">Se d√©connecter</button></a><div class="vr" style="width:15px"></div><a class="liens" href="{{ path ('utilisateur') }}"><button type="button" class="btn btn-dark">Mon Profil</button></a>
                {% else %}
                    <a class="liens" href="{{ path ('app_login') }}"><button type="button" class="btn btn-dark">Se connecter</button></a><div class="vr" style="width:15px"></div><a class="liens" href="{{ path ('app_register') }}"><button type="button" class="btn btn-dark">S'inscrire</button></a>
                {% endif %}
            </nav>
        
        {% endblock %}
    </head>
    <body>
        {% block body %}    
        {% endblock %}
    </body>
</html>
