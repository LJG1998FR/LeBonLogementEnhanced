{% extends 'base.html.twig' %}

{% block title %}Liste des Biens de {{app.user}}{% endblock %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('bien') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <h1>Liste des Biens de {{app.user}} </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Adresse</th>
                <th>Prix (euros)</th>
                <th>Superficie</th>
                <th>Date de dépôt</th>
                <th>Photos</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bien in biens %}
            {% if bien.proprietaire == app.user %}
                <tr>
                    <td>{{ bien.adresse }}</td>
                    <td>{{ bien.prix }}</td>
                    <td>{{ bien.superficie }}</td>
                    <td>{{ bien.dateDeDepot ? bien.dateDeDepot|date('d-m-Y H:i:s') : '' }}</td>
                    <td>
                    {% for image in images %}
                        {% if bien.id == image.bien.getId() %}
                            <img class="img-thumbnail" src="{{ asset('uploads/images/') }}{{ image.url }}" alt="photo">
                        {% endif %}
                    {% endfor %}
                    </td>
                    <td>{% if is_granted('EDIT', bien) %}
                            <a class="btn btn-dark" role="button" href="{{ path('bien_edit', {'id': bien.id}) }}">Modifier</a>
                        {% endif %}
                        {% if is_granted('DELETE', bien) %}
                            <a class="btn btn-dark" role="button" href="{{ path('bien_delete', {'id': bien.id}) }}">Supprimer</a>
                        {% endif %}
                    </td>
                </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="7">Aucun bien enregistré dans la base de données.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a class="btn btn-dark" role="button" href="{{ path('bien_new') }}">Ajouter Un Bien</a>
    {% else %}
        <span>Vous devez être connecté(e) pour ajouter un bien.</span>
    {% endif %}
{% endblock %}
