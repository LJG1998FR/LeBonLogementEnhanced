{% extends 'base.html.twig' %}

{% block title %}Bien{% endblock %}

{% block body %}
    <h1>Bien</h1>
    <div class="form">
        <div class="form_row">
            Adresse: {{ bien.adresse }}
        </div>
        <div class="form_row">
            Prix: {{ bien.prix }} euros
        </div>
        <div class="form_row">
            Superficie: {{ bien.superficie }}
        </div>
        <div class="form_row">
            Déposé le: {{ bien.dateDeDepot ? bien.dateDeDepot|date('d-m-Y') : '' }} à {{ bien.dateDeDepot ? bien.dateDeDepot|date('H-i') : '' }}
        </div>
        <div class="form_row">
            Propriétaire: {{ bien.proprietaire }}
        </div>
    </div>
    {% if app.request.attributes.get('_route') == 'bien_show' %}
        <div class="imagesbox">
            <h2>Images</h2>
            {% for image in bien.images %}
                <img src="{{ asset('/uploads/images/') }}{{ image.url }}" alt="Image" width="150">
            {% endfor %}
        </div>
    {% endif %}

    <div class="options">
        <button class="btn btn-dark"><a href="{{ path('bien_all_index') }}">Retour</a></button>
    </div>
{% endblock %}
