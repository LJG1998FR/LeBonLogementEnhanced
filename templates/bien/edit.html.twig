{% extends 'base.html.twig' %}

{% block title %}Modifier Un Bien{% endblock %}

{% block body %}
    <h1>Modifier Un Bien</h1>

    {{ include('bien/_form.html.twig', {'button_label': 'Enregistrer les changements'}) }}

    <div class="options">
        {{ include('bien/_delete_form.html.twig') }}

        <button class="btn btn-dark"><a href="{{ path('bien_index') }}">Retour</a></button>
    </div>
    <div id="myModal" class="modal">

        <span class="close">&times;</span>

        <img class="modal-content" id="img01">
        <div id="caption"></div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/lebonlogement.js') }}" defer></script>
{% endblock %}